{
  "name": "@mediamind/worker",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "postinstall": "npx playwright install --with-deps chromium",
    "dev": "tsx watch src/orchestrator.ts",
    "build": "tsc && node -e \"const fs=require('fs'),p=require('path');try{fs.mkdirSync('dist/config',{recursive:true})}catch(e){};fs.readdirSync('src/config').forEach(f=>fs.copyFileSync(p.join('src/config',f),p.join('dist/config',f)));console.log('Config copied')\"",
    "start": "sh start-workers.sh",
    "start:orchestrator": "node dist/orchestrator.js",
    "start:video": "node dist/workers/video-standalone.js",
    "start:image": "node dist/workers/image-standalone.js",
    "start:webcontent": "node dist/workers/webcontent-standalone.js",
    "start:ffmpeg": "node dist/workers/ffmpeg-standalone.js",
    "start:all": "npm run start:video & npm run start:image & npm run start:webcontent & npm run start:ffmpeg & npm run start:orchestrator",
    "dev:orchestrator": "tsx watch src/orchestrator.ts",
    "dev:video": "tsx watch src/workers/video-standalone.ts",
    "dev:image": "tsx watch src/workers/image-standalone.ts",
    "dev:webcontent": "tsx watch src/workers/webcontent-standalone.ts",
    "dev:ffmpeg": "tsx watch src/workers/ffmpeg-standalone.ts"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.30.0",
    "@supabase/supabase-js": "^2.45.0",
    "@tavily/core": "^0.7.1",
    "axios": "^1.13.4",
    "cors": "^2.8.5",
    "dotenv": "^16.4.0",
    "express": "^4.18.2",
    "fluent-ffmpeg": "^2.1.3",
    "openai": "^4.60.0",
    "playwright": "^1.50.0",
    "tavily": "^1.0.2",
    "uuid": "^10.0.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/fluent-ffmpeg": "^2.1.25",
    "@types/node": "^20.14.0",
    "@types/uuid": "^10.0.0",
    "tsx": "^4.15.0",
    "typescript": "^5.4.0"
  }
}
